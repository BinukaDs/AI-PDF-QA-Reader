{
  "version": 2,
  "builds": [
    {
      "src": "api/express.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/express.js" },
    { "src": "/(.*)", "dest": "/frontend/dist/$1" }
  ],
  "functions": {
    "api/express.js": {
      "includeFiles": [
        "server/uploads/sample.pdf",
        "server/uploads/page-data.json"
      ]
    }
  }
}
